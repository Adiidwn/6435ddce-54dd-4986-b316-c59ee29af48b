// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid()) @map("_id")
  email    String    @unique
  name     String?
  password String
  role     UserRole  @default(USER)
  profiles Profile[]
  ceatedAt DateTime  @default(now())

  @@map("users")
}

model Profile {
  id           String   @id @default(uuid()) @map("_id")
  display_name String
  gender       String
  birthday     DateTime
  horoscope    String
  zodiac       String
  height       Float
  weight       Float
  author       User?    @relation(fields: [authorId], references: [id])
  authorId     String?  @unique
  ceatedAt     DateTime @default(now())

  @@map("posts")
}

enum UserRole {
  ADMIN
  USER
}
